<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

  <servlet>
    <servlet-name>Upload</servlet-name>
    <servlet-class>com.utm.searchengine.server.UploadServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.utm.searchengine.server.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Signup</servlet-name>
    <servlet-class>com.utm.searchengine.server.SignupServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Search</servlet-name>
    <servlet-class>com.utm.searchengine.server.SearchServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Help</servlet-name>
    <servlet-class>com.utm.searchengine.server.HelpServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AccountEdit</servlet-name>
    <servlet-class>com.utm.searchengine.server.AccountEditServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Delete</servlet-name>
    <servlet-class>com.utm.searchengine.server.DeleteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Account</servlet-name>
    <servlet-class>com.utm.searchengine.server.AccountServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ConfirmUser</servlet-name>
    <servlet-class>com.utm.searchengine.server.ConfirmUserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RecoverPassword</servlet-name>
    <servlet-class>com.utm.searchengine.server.RecoverPasswordServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SecurityQuestion</servlet-name>
    <servlet-class>com.utm.searchengine.server.SecurityQuestionServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>RecoverPassword</servlet-name>
    <url-pattern>/recoverPassword</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SecurityQuestion</servlet-name>
    <url-pattern>/securityQuestion</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ConfirmUser</servlet-name>
    <url-pattern>/confirmUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Upload</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Signup</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Search</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Help</servlet-name>
    <url-pattern>/help</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AccountEdit</servlet-name>
    <url-pattern>/accountEdit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Delete</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Account</servlet-name>
    <url-pattern>/account</url-pattern>
  </servlet-mapping>
  
</web-app>